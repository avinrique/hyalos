{
  "name": "hyalos",
  "version": "0.1.0",
  "description": "A glass overlay for Claude Code usage â€” by Earthling Aid Tech",
  "author": "Earthling Aid Tech <avinrique>",
  "license": "MIT",
  "homepage": "https://github.com/avinrique/hyalos",
  "repository": {
    "type": "git",
    "url": "https://github.com/avinrique/hyalos"
  },
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --mac --win --linux"
  },
  "build": {
    "appId": "com.earthlingaid.hyalos",
    "productName": "Hyalos",
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "assets/**/*"
    ],
    "mac": {
      "target": ["dmg", "zip"],
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": ["nsis", "portable"]
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Utility"
    }
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0"
  }
}
